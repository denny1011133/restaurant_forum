<div class="container" style="margin-top: 150px; width: 30%;">
  <div class="card">
    <img src="{{user.image}}" style="width:100%">
    <h4><b>{{user.name}}</b></h4>
    <p>{{user.email}}</p>
    <button type="button" class="btn btn-link">
      <a href="/users/{{user.id}}/edit">
        Edit
      </a>
    </button>
  </div>
</div>
<div class="card mt-5">
  <div class="card-header">
    {{count}} 則已評論餐廳
  </div>
  <div class="card-body">
    {{#each user.Comments}}
    <a href="/restaurants/{{this.Restaurant.id}}" style="margin:10px" title="{{this.Restaurant.name}}">
      <img src="{{this.Restaurant.image}}" alt="" width="50px" height="50px">
    </a>
    {{/each}}
  </div>
</div>